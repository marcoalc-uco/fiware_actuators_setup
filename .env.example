# FIWARE Actuators Setup - Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Orion Context Broker
# =============================================================================
ORION_URL=http://localhost:1026

# =============================================================================
# IoT Agent UltraLight
# =============================================================================
IOTA_URL=http://localhost:4061

# =============================================================================
# FIWARE Headers
# =============================================================================
FIWARE_SERVICE=openiot
FIWARE_SERVICEPATH=/
FIWARE_RESOURCE=/iot/d

# =============================================================================
# HTTP Settings
# =============================================================================
TIMEOUT=10

# =============================================================================
# Optional Authentication
# =============================================================================
# MY_TOKEN=your-api-token-here

# =============================================================================
# Docker Compose - Service Credentials
# =============================================================================
# Grafana admin password (default: admin for local testing)
GRAFANA_ADMIN_PASSWORD=admin
# Enable anonymous access to Grafana (default: true for local testing)
GRAFANA_ANONYMOUS_ENABLED=true
